    <style>
   
.col-lg-4 {
    -webkit-box-flex: 0;
    -ms-flex: 0 0 33.333333%;
    flex: 0 0 33.333333%;
    max-width: 25%;
    margin-top: 10px;
}
.row {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    margin-right: -15px;
    width: 94%;
    margin: auto;
    /* margin-left: -15px; */
}
.btn-primary {
    color: #fff;
    background-color: #16181a;
}
.slide img {
  width: 100%;
  height: 200px;
}
.footer {
  background-color: #343a40;
  height: 8 0px;
  margin-top: 20px;
}
.footer p, a {
  text-align: center;
  line-height: 60px;
  color: rgb(33, 36, 72);
  
}
.bg-dark {
    height: 56px;
    background-color: #343a40!important;
}
form {
  display: flex;
}

input[type="text"] {
  width: 90%;
  padding: 10px;
  border: none;
  border-bottom: 2px solid #ccc;
  font-size: 16px;
}

button[type="submit"] {
  width: 10%;
  background-color: #39424b;
  color: white;
  border: none;
  padding: 10px 20px;
  cursor: pointer;
  font-size: 16px;
}

button[type="submit"]:hover {
  background-color:#343a40;
}

    </style>
</head>
<body>
  
    <div class="app">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="">Sách</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/add-product">Thêm Sản Shẩm</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/list-product">Thêm Sửa Xóa <a href=""></a> </a>
            </li>
        </div>
      </nav>
      <form>
        <input type="text" placeholder="Tìm kiếm...">
        <button type="submit">Tìm kiếm</button>
      </form>  
      <div class="mt-4">
        <div class="row">
          <% for (let product of hung) { %>
            <div class="col-sm-6 col-lg-4">
                <div class="card">
                <a href="">
                    <img class="card-img-top" src="img/<%= product.images %>" alt="img/<%= product.images %>">
                </a>
                <div class="card-body">
                    <a href="">
                        <h5 class="card-title"><%= product.nameProduct %></h5>
                    </a>
                    <p class="card-text"><%=product.sortDescription %></p>
                    <a href="/product:01" class="btn btn-primary">Xem Thêm</a>
                </div>
                </div>
            </div>
            <% } %>
    
        </div>
    </div>
    </div>
    <nav class="footer">
      <p><a href="dangconghuy@gmail.com">Dangconghuy</a></p>
    </nav>
